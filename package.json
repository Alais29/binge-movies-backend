{
  "name": "binge-movies",
  "version": "1.0.0",
  "description": "Backend service for a movies/tv shows information web app",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon -L -r tsconfig-paths/register ./src/index.ts",
    "start": "ts-node -L -r tsconfig-paths/register ./src/index.ts",
    "seed-data": "ts-node -r tsconfig-paths/register ./src/index.ts --seed-data",
    "build": "tsc && resolve-tspaths",
    "lint": "eslint . --ext .ts",
    "prettier": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "commit": "cz",
    "jasmine": "jasmine",
    "test": "rm -rf ./build && yarn run build && NODE_ENV=test yarn run jasmine",
    "postinstall": "husky install"
  },
  "author": "Alfonsina Lizardo",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jasmine": "4.5.0",
    "jasmine-spec-reporter": "^7.0.0",
    "mongodb-memory-server": "^8.11.4",
    "mongoose": "^6.9.0",
    "supertest": "^6.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.11",
    "@types/jasmine": "^3.7.1",
    "@types/node": "^15.0.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-spellcheck": "^0.0.20",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "resolve-tspaths": "^0.8.3",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "./src/**/*.{ts,js}": [
      "eslint --ignore-path .gitignore --fix",
      "prettier --ignore-path .gitignore --write"
    ]
  }
}
